<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SingleTravelActivityListViewPopupLinearLayout"
    android:orientation="horizontal" android:layout_width="80dp"
    android:layout_height="40dp"
    android:background="@android:color/background_dark"
    android:alpha="0.75">

    <Button
        android:id="@+id/SingleTravelActivityListViewPopupEditButton"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="编辑"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:alpha="0.75"
        android:clickable="true" />

    <Button
        android:id="@+id/SingleTravelActivityListViewPopupDeleteButton"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="删除"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:alpha="0.75"
        android:clickable="true" />
</LinearLayout>