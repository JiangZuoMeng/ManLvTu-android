<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jiangzuomeng.fleetingtime.viewConctroller.PhotoActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id= "@+id/card1"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/photo_detail_img"/>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@id/card1"
        android:paddingLeft="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize = "12sp"
            android:textColorHint="@color/content_gray"
            android:id="@+id/photo_detail_description"
            android:hint="添加描述"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card3"
        android:layout_below="@id/card2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/photo_detail_map"/>

            <ImageView
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/trans_gray"
                android:layout_gravity="center_horizontal"
                android:id="@+id/photo_detail_gray_cover"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/photo_add_location"
                android:textColor="@color/trans_white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textScaleX="1.1"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:text="@string/photo_add_location"
                android:background="@drawable/ripple_button"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
