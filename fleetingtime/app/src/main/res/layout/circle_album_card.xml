<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="3dp"
    card:cardBackgroundColor="@android:color/white"
    android:layout_marginLeft="@dimen/circle_card_margin"
    android:layout_marginRight="@dimen/circle_card_margin"
    android:layout_marginTop="@dimen/circle_card_margin_top"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/circle_card_margin">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/album_cover"
                android:background="@drawable/guangzhou"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/line"
            android:showDividers="middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/content_black"
                    android:id="@+id/album_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/album_description"
                    android:textColor="@color/content_gray"
                    android:layout_below="@id/album_name"/>
            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/place_icon"
                        android:layout_marginRight="5dp"
                        android:src = "@drawable/ic_place_gray_18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/content_gray"
                        android:id="@+id/album_location"
                        android:layout_toRightOf="@id/place_icon"
                        android:text="@string/app_name"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/favorite_icon"
                        android:layout_marginRight="5dp"
                        android:src = "@drawable/ic_favorite_black_18dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/content_gray"
                        android:layout_toRightOf="@id/favorite_icon"
                        android:id="@+id/album_good_num"
                        android:text="@string/app_name"/>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>