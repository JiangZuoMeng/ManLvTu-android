<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiangzuomeng.fleetingtime.viewConctroller.NearbyFragment">


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/iconBarBg"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="4dp"
        />

<!--   <ImageView
        android:layout_below="@id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "@drawable/map_temp"/>-->


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/call_menu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/floating_button"
        app:fab_addButtonColorNormal="@color/fabWhite"
        app:fab_addButtonColorPressed="@color/fabGray"
        app:fab_addButtonPlusIconColor="@color/fabGray"
        app:fab_addButtonSize="mini"
        app:fab_expandDirection="up">


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_start"
            android:visibility="visible"
            app:fab_colorNormal="@color/fabYellow"
            app:fab_colorPressed="@color/fabYellowDark"
            app:fab_size="mini"
            android:src="@drawable/ic_add_location_white_24dp" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_capture"
            app:fab_colorNormal="@color/fabRed"
            app:fab_colorPressed="@color/fabRedDark"
            app:fab_size="mini"
            android:visibility="gone"
            android:src="@drawable/ic_camera_white_24dp" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_finish"
            android:visibility="gone"
            app:fab_colorNormal="@color/fabGreen"
            app:fab_colorPressed="@color/fabGreenDark"
            app:fab_size="mini"
            android:src="@drawable/ic_ok_white_24dp" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
